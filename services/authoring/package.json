{
  "name": "tweek-authoring",
  "version": "0.2.1",
  "main": "src/server.js",
  "repository": "https://github.com/Soluto/tweek",
  "author": "Soluto",
  "license": "MIT",
  "engines": {
    "node": ">=8.1.4"
  },
  "scripts": {
    "test": "mocha -r ts-node/register",
    "build": "npm run clean && tsc && cpr ./src/search-index/build/ ./dist/search-index/build/ -o && npm run swagger",
    "clean": "rimraf dist",
    "start": "ts-node ./src/server.ts",
    "start:release": "node ./dist/server.js",
    "start:debug": "node --inspect=5858 ./dist/server.js",
    "start:dev": "nodemon --watch src --ext ts --exec 'ts-node src/server.ts --GIT_USER git --GIT_URL ssh://git@localhost:4001/tweek/repo --GIT_PUBLIC_KEY_PATH ../git-service/ssh/tweekgit.pub --GIT_PRIVATE_KEY_PATH ../git-service/ssh/tweekgit'",
    "start:full-env": "npm run docker-compose up -- -d api git && npm run start:dev",
    "docker-compose": "docker-compose -f ../../deployments/dev/docker-compose.yml -f ../../deployments/dev/docker-compose.override.yml",
    "teardown": "npm run docker-compose -- down --remove-orphans",
    "format": "prettier-eslint --trailing-comma all --print-width 100 --single-quote --write",
    "format:ts": "tsfmt -r",
    "precommit": "lint-staged",
    "swagger": "swaggerGen -c swagger.config.json"
  },
  "lint-staged": {
    "gitDir": "../../",
    "linters": {
      "**/authoring/**/*.js": [
        "npm run format",
        "git add"
      ],
      "**/authoring/**/*.ts": [
        "npm run format:ts",
        "git add"
      ]
    }
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "fast-json-patch": "^2.0.4",
    "fs-extra": "^4.0.0",
    "glob": "^7.1.2",
    "highland": "^2.11.1",
    "jszip": "^3.1.3",
    "lock-queue": "^1.0.1",
    "lunr": "^2.1.2",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "nconf": "^0.8.4",
    "node-getopt": "^0.2.3",
    "nodegit": "^0.18.3",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-strategy": "^1.0.0",
    "ramda": "^0.24.1",
    "rxjs": "^5.4.2",
    "simple-git": "^1.74.1",
    "sshpk": "^1.13.1",
    "typescript-ioc": "^0.4.2",
    "typescript-rest": "^1.1.1",
    "typescript-rest-swagger": "^0.0.10",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/fs-extra": "^4.0.0",
    "@types/morgan": "^1.7.32",
    "@types/nconf": "^0.0.34",
    "@types/nodegit": "^0.18.1",
    "@types/passport": "^0.3.3",
    "@types/passport-jwt": "^2.0.22",
    "@types/passport-strategy": "^0.2.30",
    "@types/ramda": "^0.24.7",
    "@types/sshpk": "^1.10.3",
    "chai": "^4.1.0",
    "chai-things": "^0.2.0",
    "cpr": "^2.2.0",
    "eslint": "^4.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "prettier-eslint-cli": "^4.1.1",
    "rimraf": "^2.6.1",
    "simple-mock": "^0.8.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "typescript-formatter": "^5.2.0"
  }
}
