{
  "name": "tweek-authoring-api",
  "version": "1.0.0",
  "main": "src/server.js",
  "repository": "https://github.com/Soluto/tweek",
  "author": "Soluto",
  "license": "MIT",
  "engines": {
    "node": ">=8.1.3"
  },
  "scripts": {
    "test": "mocha",
    "start": "node ./src/server.js",
    "start:dev": "nodemon --watch src src/server.js -- --GIT_USER git --GIT_URL ssh://git@localhost:4001/tweek/repo --GIT_PUBLIC_KEY_PATH ../git-service/ssh/tweekgit.pub --GIT_PRIVATE_KEY_PATH ../git-service/ssh/tweekgit",
    "start:full-env": "npm run docker-compose up -- -d git && npm run start:dev",
    "docker-compose": "docker-compose -f ../../deployments/dev/docker-compose.yml -f ../../deployments/dev/docker-compose.override.yml",
    "teardown": "npm run docker-compose -- down --remove-orphans",
    "format": "prettier-eslint --trailing-comma all --print-width 100 --single-quote --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "gitDir": "../../",
    "linters": {
      "**/authoring/**/*.js": [
        "npm run format",
        "git add"
      ]
    }
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "fs-extra": "^4.0.0",
    "glob": "^7.1.2",
    "highland": "^2.11.1",
    "lock-queue": "^1.0.1",
    "lunr": "^2.1.2",
    "morgan": "^1.8.2",
    "nconf": "^0.8.4",
    "node-getopt": "^0.2.3",
    "nodegit": "^0.18.3",
    "ramda": "^0.24.1",
    "rxjs": "^5.4.2"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "eslint": "^4.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "prettier-eslint-cli": "^4.1.1"
  }
}
