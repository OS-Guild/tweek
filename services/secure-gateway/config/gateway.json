{
    "upstreams": {
        "api": "http://api",
        "authoring": "http://authoring:3000"
    },
    "security": {
        "enforce": true,
        "policyStorage": {
            "casbinModel": "/model.conf"
        },
        "auth": {
            "providers": {
                "google": {                    
                    "name": "Google Account",
                    "authority": "https://accounts.google.com",
                    "clientId": ""
                },
                "azure": {                    
                    "name": "Azure OpenId connect",
                    "authority": "https://login.microsoftonline.com/common",
                    "clientId": ""
                }
            }
        }
    },
    "v1Hosts": {
        "api": [
            "api",
            "api.localtest.me"
        ],
        "authoring": [
            "authoring",
            "authoring.localtest.me"
        ]
    },
    "server": {
        "ports": [
            3000,
            80
        ]
    }
}
